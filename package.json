{
  "name": "heartland-contract-cadence-api",
  "version": "1.0.0",
  "description": "Flow Heart Token Control API - TypeScript-based Serverless API for Flow Heart Token Contract",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest --coverage --coverageThreshold='{\"global\":{\"lines\":15}}'",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec-and-routes": "pnpm run tsoa:spec && pnpm run tsoa:routes",
    "docs:serve": "swagger-ui-serve build/swagger.json",
    "deploy:dev": "pnpm run build && pnpm run tsoa:spec-and-routes && serverless deploy --stage dev",
    "deploy:prod": "pnpm run build && pnpm run tsoa:spec-and-routes && serverless deploy --stage prod",
    "offline": "pnpm run build && pnpm run tsoa:spec-and-routes && serverless offline"
  },
  "keywords": [
    "flow",
    "blockchain",
    "serverless",
    "typescript",
    "heart",
    "token",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@aws-sdk/client-cloudwatch-logs": "^3.879.0",
    "@aws-sdk/client-dynamodb": "^3.879.0",
    "@aws-sdk/client-sqs": "^3.879.0",
    "@aws-sdk/lib-dynamodb": "^3.879.0",
    "@codegenie/serverless-express": "^4.17.0",
    "@eslint/js": "^9.30.1",
    "@onflow/fcl": "^1.20.0",
    "@onflow/types": "^1.4.1",
    "@onflow/util-encode-key": "^1.2.4",
    "@types/aws-lambda": "^8.10.150",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "express": "^5.1.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "serverless": "^4.17.1",
    "serverless-domain-manager": "^8.0.0",
    "serverless-offline": "^14.4.0",
    "serverless-plugin-typescript": "^2.1.5",
    "serverless-plugin-warmup": "^8.3.0",
    "supertest": "^7.1.1",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@atproto/api": "^0.18.9",
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/client-ses": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "@aws-sdk/util-dynamodb": "^3.902.0",
    "@blocto/fcl": "^1.13.1",
    "@onflow/sdk": "^1.10.2",
    "@tsoa/runtime": "^6.6.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/dotenv": "^8.2.3",
    "@types/elliptic": "^6.4.18",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.1.0",
    "elliptic": "^6.6.1",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "sha3": "^2.1.4",
    "sharp": "^0.34.4",
    "tsoa": "^6.6.0",
    "ulid": "^3.0.2",
    "uuid": "^10.0.0"
  },
  "comment": "Layer化により以下の依存関係を削除:",
  "removed_dependencies": {
    "aws_sdk": [
      "@aws-sdk/client-cloudwatch-logs",
      "@aws-sdk/client-sqs"
    ],
    "flow_sdk": [
      "@onflow/fcl",
      "@onflow/types",
      "@onflow/util-encode-key"
    ],
    "web_deps": [
      "express",
      "swagger-ui-express",
      "@codegenie/serverless-express"
    ]
  }
}
