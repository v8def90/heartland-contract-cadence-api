{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/**/*Controller.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "name": "Flow Heart Token Control API",
    "description": "TypeScript-based Serverless API for Flow Heart Token Contract interactions including balance queries, token transfers, and administrative operations.",
    "version": "1.0.0",
    "contact": {
      "name": "Heart Token API Support",
      "email": "support@hearttoken.flow.io"
    },
    "license": "MIT",
    "host": "bdfit4sq1m.execute-api.ap-northeast-1.amazonaws.com",
    "schemes": ["https", "http"],
    "basePath": "/",
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "JWT Bearer Token (format: 'Bearer {token}')"
      }
    },
    "tags": [
      {
        "name": "Balance",
        "description": "Token balance operations and queries"
      },
      {
        "name": "Token Info",
        "description": "General token information (supply, tax rate, etc.)"
      },
      {
        "name": "Transfer",
        "description": "Token transfer operations"
      },
      {
        "name": "Admin",
        "description": "Administrative operations (mint, burn, pause, etc.)"
      },
      {
        "name": "Auth",
        "description": "Authentication and authorization operations"
      },
      {
        "name": "Setup",
        "description": "Account setup operations for HEART token vaults"
      },
      {
        "name": "SNS Posts",
        "description": "Social network post operations (create, read, delete)"
      },
      {
        "name": "SNS Comments",
        "description": "Comment operations on posts"
      },
      {
        "name": "SNS Likes",
        "description": "Like operations on posts"
      },
      {
        "name": "SNS Follows",
        "description": "Follow/unfollow user operations"
      },
      {
        "name": "SNS Feed",
        "description": "Personalized and global feed operations"
      }
    ]
  },
  "routes": {
    "routesDir": "src",
    "routesFileName": "routes.ts",
    "middleware": "express",
    "authenticationModule": "src/middleware/auth"
  },
  "ignore": ["**/node_modules/**", "**/build/**", "**/dist/**", "**/tests/**"]
}
